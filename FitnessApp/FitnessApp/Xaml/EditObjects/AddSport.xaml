<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.AddSport">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit Sport :"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Name :"/>
            <Entry x:Name="in_Name" Placeholder="Ex: crunch" />
            <StackLayout x:Name="lis_units"
                         Orientation="Vertical"
                         VerticalOptions="StartAndExpand"
                         HorizontalOptions="CenterAndExpand"/>

            <StackLayout Orientation="Horizontal"
                        HorizontalOptions="Center" >
                <Button x:Name="btn_Cancel" Text="Cancel" Clicked="Button_CancelClicked"/>
                <Button x:Name="btn_Submit" Text="Submit" Clicked="Button_SubmitClicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>