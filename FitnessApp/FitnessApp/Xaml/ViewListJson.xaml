<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.ViewListJson"
             Title="Units and Sports">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Known units :"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

            <ListView x:Name="lis_units" />

            <Button x:Name="btn_addUnit"
                    Text="Edit unit"
                    BackgroundColor="#03AB17"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="AddUnitClicked"/>
            
            <Label Text="Known sports :"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            
            <ListView x:Name="lis_sports" />
            
            <Button x:Name="btn_addSport"
                    Text="Edit sport"
                    BackgroundColor="#03AB17"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="AddSportClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>